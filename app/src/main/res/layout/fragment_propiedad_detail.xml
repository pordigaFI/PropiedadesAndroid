<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rosaBajito"
    tools:context=".ui.fragments.PropiedadDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="15dp"
                        android:id="@+id/ivImage"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:riv_corner_radius="10dp"
                        tools:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="@string/callePropiedad"
                        app:layout_constraintTop_toBottomOf="@id/ivImage"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:id="@+id/tvCalle"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/ivImage"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toRightOf="@id/tv1"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="@string/callePropiedad" />

                    <TextView
                        android:id="@+id/tv2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="@string/coloniaPropiedad"
                        app:layout_constraintTop_toBottomOf="@id/tv1"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tvColonia"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/tvCalle"
                        app:layout_constraintLeft_toRightOf="@id/tv2"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="@string/coloniaPropiedad" />

                    <TextView
                        android:id="@+id/tv3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="@string/MunicipioPropiedad"
                        app:layout_constraintTop_toBottomOf="@id/tv2"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tvMunicipio"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/tvColonia"
                        app:layout_constraintLeft_toRightOf="@id/tv3"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="@string/MunicipioPropiedad" />

                    <TextView
                        android:id="@+id/tv4"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="@string/estado"
                        app:layout_constraintTop_toBottomOf="@id/tv3"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/tvMunicipio"
                        app:layout_constraintLeft_toRightOf="@id/tv4"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="@string/estado" />

                    <TextView
                        android:id="@+id/tv5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="@string/m2_terreno"
                        app:layout_constraintTop_toBottomOf="@id/tv4"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tvm2Terreno"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/tvEstado"
                        app:layout_constraintLeft_toRightOf="@id/tv5"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="@string/m2_terreno" />

                    <TextView
                        android:id="@+id/tv6"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="@string/m2_construccion"
                        app:layout_constraintTop_toBottomOf="@id/tv5"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tvm2Construccion"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/tvm2Terreno"
                        app:layout_constraintLeft_toRightOf="@id/tv6"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="@string/m2_construccion" />

                    <TextView
                        android:id="@+id/tv7"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="@string/latitud"
                        app:layout_constraintTop_toBottomOf="@id/tv6"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tvLatitud"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/tvm2Construccion"
                        app:layout_constraintLeft_toRightOf="@id/tv7"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="@string/latitud" />

                    <TextView
                        android:id="@+id/tv8"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="@string/longitud"
                        app:layout_constraintTop_toBottomOf="@id/tv7"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tvLongitud"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/tvLatitud"
                        app:layout_constraintLeft_toRightOf="@id/tv8"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="@string/longitud" />

                    <TextView
                        android:id="@+id/tv9"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        android:text="@string/descripcionPropiedad"
                        app:layout_constraintTop_toBottomOf="@id/tv8"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tvDescripcion"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvLongitud"
                        app:layout_constraintLeft_toRightOf="@id/tv9"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="@string/descripcionPropiedad" />

                    <TextView
                        android:id="@+id/tv10"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="@string/lblpoint"
                        app:layout_constraintTop_toBottomOf="@id/tv9"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="20dp"
                        />

                    <Button
                        android:id="@+id/btnAdelante"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
                        app:layout_constraintLeft_toRightOf="@id/tv10"
                        android:layout_marginTop="20dp"
                        android:text="@string/ver_mas_detalles"
                        android:backgroundTint="@color/rosaMexicano"
                        android:layout_gravity="center"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>